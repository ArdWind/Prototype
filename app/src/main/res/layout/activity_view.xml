<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".ViewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Background Image -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/aksenback"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/viewbackimg"
            android:contentDescription="@string/background_image_desc"/>

        <!-- Back Button -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/btnbackview"
            android:contentDescription="@string/back_icon_desc"/>

        <!-- Title Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnbackview"
            android:layout_marginTop="10dp"
            android:text="@string/view_room"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:id="@+id/viewtext1"/>

        <!-- Description Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_below="@id/viewtext1"
            android:text="@string/view_room_description"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/viewtext2"/>

        <!-- Rules Container -->
        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewtext2"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:id="@+id/viewly1">

            <!-- Rule 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAlignment="center"
                    app:drawableTopCompat="@drawable/roomtarivid"
                    android:contentDescription="@string/desc_room_tarivid"
                    android:layout_weight="1"
                    android:text="@string/rule_1_text"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Rule 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAlignment="center"
                    app:drawableTopCompat="@drawable/roomtpm"
                    android:contentDescription="@string/desc_room_tpm"
                    android:layout_weight="1"
                    android:text="@string/rule_2_text"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Rule 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAlignment="center"
                    app:drawableTopCompat="@drawable/roomzegafit"
                    android:contentDescription="@string/desc_room_zegafit"
                    android:layout_weight="1"
                    android:text="@string/rule_3_text"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Rule 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAlignment="center"
                    app:drawableTopCompat="@drawable/setzaegafit"
                    android:contentDescription="@string/desc_room_setzaegafit"
                    android:layout_weight="1"
                    android:text="@string/rule_4_text"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Rule 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/desc_room_setcafe"
                    android:text="@string/rule_5_text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:drawableTopCompat="@drawable/setcafe" />
            </LinearLayout>

        </LinearLayout>

        <!-- View List Booking Button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/Button_list_booking"
            android:layout_below="@id/viewly1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape"
            android:width="250dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsbold"
            android:textSize="14sp"
            android:id="@+id/btnview1"/>

    </RelativeLayout>

</ScrollView>
